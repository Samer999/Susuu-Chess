<%- include('./partials/head'); -%>

<script type="text/javascript" src="https://unpkg.com/colyseus.js@^0.14.0/dist/colyseus.js"></script>

<link href="./css/chat.css" rel="stylesheet">

<body>

<div class="container">
    <div class="container content">
        <div class="row">
            <div class="col  col-12">
                <div class="card" style="height: 100%">
                    <div class="card-header">Chat</div>
                    <div class="card-body height3">
                        <ul class="chat-list">
                        </ul>
                        <form id="chatForm">
                            <div class="row">
                                <div class="col-9">
                                    <input type="text" id="messageToSend" style="width: 100%;">
                                </div>
                                <div class="col">
                                    <button class="btn btn-primary" style="width: 100%;">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>


<script src="./js/globalChat.js"></script>
<script>
    const clientName = '<%= user ? user.name : ("Guest-" + Math.floor(Math.random() * 1000000000))%>';
    connectToChat(clientName);
</script>